{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".storybook",
    "example",
    "test"
  ]
}